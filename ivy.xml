        <dependency org="org.glassfish.jersey.media" name="jersey-media-multipart" rev="2.36"/>
        <dependency org="org.glassfish.jersey.core" name="jersey-client" rev="2.36"/>        
        <dependency org="org.glassfish.jersey.core" name="jersey-common" rev="2.36"/>
        <dependency org="org.glassfish.jersey.core" name="jersey-server" rev="2.36"/>
        <dependency org="javax.ws.rs" name="javax.ws.rs-api" rev="2.1.1"/>
        <dependency org="org.glassfish.hk2" name="hk2-api" rev="2.5.0"/>
        <dependency org="org.glassfish.hk2" name="hk2-locator" rev="2.5.0"/>
        <dependency org="org.glassfish.hk2" name="hk2-utils" rev="2.5.0"/>
        <dependency org="org.glassfish.jersey.inject" name="jersey-hk2" rev="2.28"/>
        <dependency org="opendcs" name="opendcs" rev="7.0.1"/>
            
        <!-- test dependencies -->
