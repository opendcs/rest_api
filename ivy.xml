        <!-- groovy deps for biuld script -->
        <dependency org="org.codehaus.groovy" name="groovy-ant" rev="3.0.10" conf="build->default"/>
        <dependency org="org.codehaus.groovy" name="groovy" rev="3.0.10" conf="build->default"/>
        <dependency org="org.codehaus.groovy" name="groovy-xml" rev="3.0.10" conf="build->default"/>

        <!-- other build dependencies -->
        <dependency org="ant-contrib" name="ant-contrib" rev="1.0b3" conf="build->default"/>
